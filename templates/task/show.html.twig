{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-light">Task Details</h1>

        <table class="table table-dark table-striped table-hover">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ task.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Title</th>
                    <td>{{ task.title }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ task.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Status</th>
                    <td>{{ task.status ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th scope="row">Created_at</th>
                    <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex flex-column">
            
            <div class="d-flex gap-2">
            <a href="{{ path('app_task_index') }}" class="btn btn-secondary">Back to list</a>
                <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('task/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}